<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_plateau_poker"
    android:layout_gravity="bottom|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p2"
            android:textColor="#FFFF"
            android:text="Player Two"/>

        <ImageView
            android:layout_marginLeft="25dp"
            android:id="@+id/DealerPlayer2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/token_dealer"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="start">


        <ImageView
            android:layout_marginLeft="40dp"
            android:id="@+id/imageViewCardPlayerTwo1"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/card_face_down"/>

        <ImageView
            android:layout_marginRight="40dp"
            android:id="@+id/imageViewCardPlayerTwo2"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/card_face_down" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tokenPlayer2"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:src="@drawable/token"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ValueTokenPlayer2"
                android:textColor="#FFFF"
                android:text="0€"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardRiver1"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/card_face_down"/>
        <ImageView
            android:id="@+id/cardRiver2"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/card_face_down"/>
        <ImageView
            android:id="@+id/cardRiver3"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/card_face_down"/>
        <ImageView
            android:id="@+id/cardRiver4"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/card_face_down"/>
        <ImageView
            android:id="@+id/cardRiver5"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/card_face_down"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tokenRiver"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/token"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ValueTokenRiver"
            android:textColor="#FFFF"
            android:text="0€"/>

    </LinearLayout>

</LinearLayout>